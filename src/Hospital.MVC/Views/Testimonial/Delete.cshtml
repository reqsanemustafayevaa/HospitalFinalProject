
@model Testimonial

<div class="container" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div class="card mb-3">
                    <img src="~/uploads/testimonials/@Model.ImageUrl" class="card-img-top" alt="Slider Image">
                    <div class="card-body">
                        <h5 class="card-title">@Model.FullName</h5>
                        <p class="card-text">@Model.Comment</p>
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="index" asp-controller="testimonial" class="btn btn-primary">Go Home</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
