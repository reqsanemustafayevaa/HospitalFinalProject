@model List<Testimonial>
@{
    var counter = 0;
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Testimonials</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Position</th>
                    <th scope="col">Comment</th>
                    <th scope="col">Image</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    counter++;
                    <tr>
                        <td>@counter</td>
                        <td>@service.FullName</td>
                        <td>@service.Position</td>
                        <td>@service.Comment</td>
                        <td>
                            <img src="~/uploads/testimonials/@service.ImageUrl" class="img-fluid" style="max-width: 120px;" />
                        </td>
                        <td>
                            <a asp-action="delete" asp-controller="testimonial" asp-route-id="@service.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
