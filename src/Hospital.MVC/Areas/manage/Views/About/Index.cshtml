@model List<About>
@{
    var counter = 0;
}

<style>
    body {
        background-color: #cce5ff;
    }

   
    .table {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

      
        .table thead th {
            background-color: #007bff; 
            color: white; 
        }

       
        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2; 
        }

       
        .table tbody tr:hover {
            background-color: #e2e6ea;
        }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Create</h1>
      @*   <a asp-action="create" asp-controller="about" class="btn btn-primary">Create</a> *@
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">QualityDoctors</th>
                <th scope="col">HappyPatients</th>
                <th scope="col">HealthSections</th>
                <th scope="col">Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var about in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@about.Title</td>
                    <td>@about.QualityDoctors</td>
                    <td>@about.HappyPatients</td>
                    <td>@about.HealthSections</td>
                    <td><img src="~/uploads/abouts/@about.ImageUrl" style="max-width:120px" /></td>
                    <td>
                        <a asp-action="update" asp-controller="about" asp-route-id="@about.Id" class="btn btn-warning">Update</a>
                       @*  <a asp-action="delete" asp-controller="about" asp-route-id="@about.Id" class="btn btn-danger">delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
