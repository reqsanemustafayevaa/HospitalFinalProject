@model List<About>
@{
    var counter = 0;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Create</h1>
        <a asp-action="create" asp-controller="about" class="btn btn-primary">Create</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
             
                <th scope="col">QualityDoctors</th>
                <th scope="col">HappyPatients</th>
                <th scope="col">HealthSections</th>
                <th scope="col">Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var about in Model)
            {
                counter++;
                <tr>

                    <th scope="row">@counter</th>
                    <td>@about.Title</td>
                   
                    <td>@about.QualityDoctors</td>
                    <td>@about.HappyPatients</td>
                    <td>@about.HealthSections</td>
                    <td><img src="~/uploads/abouts/@about.ImageUrl" style="max-width:120px" /></td>
                    <td>
                        <a asp-action="update" asp-controller="about" asp-route-id="@about.Id" class="btn btn-success">Update</a>
                        <a asp-action="delete" asp-controller="about" asp-route-id="@about.Id" class="btn btn-danger">delete</a>
                    </td>

                </tr>
            }


        </tbody>
    </table>
</div>
