@model List<Service>
@{
    var counter = 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #fff3cd; 
            color: #856404; 
        }

        .container {
            margin-top: 50px;
        }

        .table {
            background-color: #ffeeba; 
            border-radius: 10px;
        }

            .table thead th {
                background-color: #ffc107; 
                color: #ffffff;
            }

        .btn-primary {
            background-color: #ffc107; 
            border-color: #ffc107; 
        }

            .btn-primary:hover {
                background-color: #e0a800; 
                border-color: #e0a800;
            }

        .btn-success {
            background-color: #28a745; 
            border-color: #28a745; 
        }

        .btn-danger {
            background-color: #dc3545; 
            border-color: #dc3545; 
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Create</h1>
            <a asp-action="create" asp-controller="service" class="btn btn-primary">Create</a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Title</th>
                    <th scope="col">Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@service.Name</td>
                        <td>@service.Title</td>
                        <td><img src="~/uploads/services/@service.ImageUrl" style="max-width:120px" /></td>
                        <td>
                            <a asp-action="update" asp-controller="service" asp-route-id="@service.Id" class="btn btn-success">Update</a>
                            <a asp-action="delete" asp-controller="service" asp-route-id="@service.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
