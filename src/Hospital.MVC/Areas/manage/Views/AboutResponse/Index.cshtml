@model List<AboutResponse>
@{
    var counter = 0;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Create</h1>
        <a asp-action="create" asp-controller="aboutresponse" class="btn btn-primary">Create</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Response1</th>

                <th scope="col">Response2</th>
                <th scope="col">Response3</th>
              
                <th scope="col">Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var about in Model)
            {
                counter++;
                <tr>

                    <th scope="row">@counter</th>
                    <td>@about.Response1</td>

                    <td>@about.Response2</td>
                    <td>@about.Response3</td>
                
                    <td><img src="~/uploads/aboutresponse/@about.ImageUrl" style="max-width:120px" /></td>
                    <td>
                        <a asp-action="update" asp-controller="aboutresponse" asp-route-id="@about.Id" class="btn btn-success">Update</a>
                        <a asp-action="delete" asp-controller="aboutresponse" asp-route-id="@about.Id" class="btn btn-danger">delete</a>
                    </td>

                </tr>
            }


        </tbody>
    </table>
</div>
