@model List<Gallery>
@{
    var counter = 0;
}

<div class="container" style="margin-top: 50px;">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Create</h1>
        <a asp-action="create" asp-controller="gallery" class="btn btn-primary">Create</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gallery in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td><img src="~/uploads/galleries/@gallery.ImageUrl" style="max-width:120px" /></td>
                    <td>
                        <a asp-action="update" asp-controller="gallery" asp-route-id="@gallery.Id" class="btn btn-success">Update</a>
                        <a asp-action="delete" asp-controller="gallery" asp-route-id="@gallery.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
