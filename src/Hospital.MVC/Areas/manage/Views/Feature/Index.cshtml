@model List<Feature>
@{
    var counter = 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Feature</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            color: #343a40; 
        }

        .container {
            margin-top: 50px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff; 
        }

            .btn-primary:hover {
                background-color: #0056b3; 
                border-color: #0056b3; 
            }

        .table {
            background-color: #fff; 
            border-radius: 10px; 
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
        }

            .table th {
                background-color: #007bff; 
                color: #fff; 
            }

            .table tbody tr:nth-child(even) {
                background-color: #f2f2f2; 
            }

            .table tbody tr:hover {
                background-color: #e2e6ea;
            }

            .table img {
                max-width: 120px; 
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Create Feature</h1>
           @*  <a asp-action="create" asp-controller="feature" class="btn btn-primary">Create</a> *@
        </div>

        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var feature in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@feature.Title</td>
                        <td>@feature.Description</td>
                        <td><img src="~/uploads/features/@feature.ImageUrl" alt="Feature Image" class="img-fluid"></td>
                        <td>
                            <a asp-action="update" asp-controller="feature" asp-route-id="@feature.Id" class="btn btn-success">Update</a>
                          @*   <a asp-action="delete" asp-controller="feature" asp-route-id="@feature.Id" class="btn btn-danger">Delete</a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
