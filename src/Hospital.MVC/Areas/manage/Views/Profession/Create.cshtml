
@model Profession

<div class="container shadow form-container">
    <div>
        <h1 class="title mb-3">Create Profession</h1>
    </div>
    <form method="post">
        <div class="mb-3">
            <label  asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control form-input" placeholder="please enter Profession">
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label for="" asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" type="text" class="form-control form-input" placeholder="please enter  Description">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
        
       
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-info" asp-action="Index" asp-controller="Profession">Back To Home</a>
    </form>
</div>
