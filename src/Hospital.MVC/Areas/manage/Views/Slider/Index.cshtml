@model List<Slider>
@{
    var counter = 0;
}

<style>
    body {
        background-color: #007bff; 
    }

    .container {
        margin-top: 20px;
    }

    .table {
        background-color: white;
        border-radius: 5px;
    }

    th, td {
        text-align: center;
    }

    th {
        background-color: #007bff; 
        color: white;
    }

    .btn {
        margin-right: 5px;
    }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Create</h1>
        <a asp-action="create" asp-controller="slider" class="btn btn-primary">Create</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var slider in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@slider.Title</td>
                    <td>@slider.Description</td>
                    <td><img src="~/uploads/sliders/@slider.ImageUrl" style="max-width:120px" /></td>
                    <td>
                        <a asp-action="update" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-warning">Update</a>
                        <a asp-action="delete" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
