@model List<Slider>
@{
    var counter = 0;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Create</h1>
        <a asp-action="create" asp-controller="slider" class="btn btn-primary">Create</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feature in Model)
            {
                counter++;
                <tr>

                    <th scope="row">@counter</th>
                    <td>@feature.Title</td>
                    <td>@feature.Description</td>
                    <td><img src="~/uploads/sliders/@feature.ImageUrl" style="max-width:120px" /></td>
                    <td>
                        <a asp-action="update" asp-controller="slider" asp-route-id="@feature.Id" class="btn btn-success">Update</a>
                        <a asp-action="delete" asp-controller="slider" asp-route-id="@feature.Id" class="btn btn-danger">delete</a>
                    </td>

                </tr>
            }


        </tbody>
    </table>
</div>
