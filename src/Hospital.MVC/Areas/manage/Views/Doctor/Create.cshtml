
@model Doctor

<div class="container-fluid">
    <h1 class="mx-3">Create Doctor</h1>
    <div class="row justify-content-center flex-column align-items-center">
        <form class="col-md-8" asp-action="create" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Fullname">Fullname</label>
                    <input asp-for="Fullname" class="form-control" placeholder="FullName">
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Phone">Phone</label>
                    <textarea asp-for="Phone" class="form-control" rows="6" placeholder="Phone"></textarea>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
               
               
            </div>

          
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Office">Office</label>
                    <input asp-for="Office" class="form-control" placeholder="Office">
                    <span asp-validation-for="Office" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Degree">Degree</label>
                    <input asp-for="Degree" class="form-control" placeholder="Degree">
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Institute">Institute</label>
                    <input asp-for="Institute" class="form-control" placeholder="Institute">
                    <span asp-validation-for="Institute" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
             
               
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="ProfessionId">Profession</label>
                    <select asp-for="ProfessionId" class="form-select" aria-label="Default select example" style="margin-left:10px">
                        @foreach (var profession in ViewBag.Professions)
                        {
                            <option value="@profession.Id">@profession.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ProfessionId" class="text-danger"></span>
                </div>
               
                
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <label asp-for="ImageFile" class="form-label">Imagefile</label>
                    <input asp-for="ImageFile" class="form-control">
                    <span asp-validation-for="ImageFile" style="color:red"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Year" class="form-label">Year</label>
                    <input asp-for="Year" class="form-control">
                    <span asp-validation-for="Year" style="color:red"></span>
                </div>

               
            </div>
            <div class="form-group">
                <label>Work Schedule:</label>
                @for (int i = 0; i < Enum.GetValues(typeof(DayOfWeek)).Length; i++)
                {
                    <div class="row">
                        <div class="col-md-4">
                            <select asp-for="@Model.WorkSchedules[i].Day" class="form-control">
                                <option value="">Select Day</option>
                                @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
                                {
                                    <option value="@day">@day</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="@Model.WorkSchedules[i].StartTime" class="form-control" type="time" />
                        </div>
                        <div class="col-md-4">
                            <input asp-for="@Model.WorkSchedules[i].EndTime" class="form-control" type="time" />
                        </div>
                    </div>
                }
               </div>
          
           

           
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
